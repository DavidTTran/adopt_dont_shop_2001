<style>

ul {
  list-style-type: none;
  float: left;
  padding: 10px;
  text-align; center
}

</style>

<h2><%= @pets.first.shelter.name %></h2>
<h3>Shelter Pets Index</h3>
<h4><a href="/shelters/<%= @pets.first.shelter.id %>/pets/new">Create Pet</a></h4>

<% @pets.each do |pet| %>
  <ul>
    <img src="<%= pet.image %>" width="200" height="200"><br>
    <li>Name: <%= pet.name %></li>
    <li>Sex: <%= pet.sex %></li>
    <li>Approximate Age: <%= pet.approximate_age %></li>
  </ul>
<% end %>
