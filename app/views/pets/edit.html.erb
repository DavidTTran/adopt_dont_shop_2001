<h2>Update Information</h2>

<%= form_tag "/pets/#{@pet.id}" do %>
  <%= label_tag :image %>
  <%= text_field_tag :image %><br>
  <%= label_tag :name %>
  <%= text_field_tag :name %><br>
  <%= label_tag :description %>
  <%= text_field_tag :description %><br>
  <%= label_tag :approximate_age %>
  <%= text_field_tag :approximate_age %><br>
  <%= label_tag :sex %>
  <%= text_field_tag :sex %><br><br>
  <%= submit_tag "Update Pet" %>
<% end %>

<h4><%= link_to "Go Back", "/pets" %></h4>
