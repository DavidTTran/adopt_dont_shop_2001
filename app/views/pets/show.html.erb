<style>

ul {
  list-style-type: none;
  text-align: center;
  padding: 5px
}

body {
  text-align: center
}

</style>

<body>

  <ul>
    <h1><%= @pet.name %></h1>
    <img src="<%= @pet.image %>" width= "300px" height= "300px">
      <p>Description: <%= @pet.description %></p>
      <p>Age: <%= @pet.approximate_age %></p>
      <p>Sex: <%= @pet.sex %></p>
      <p>Adoption Status: <%= @pet.adoption_status %></p>
  </ul>

  <p><%= link_to "Pets Index", "/pets" %></p>
  <p><%= link_to "Update Pet", "/pets/#{@pet.id}/edit" %></p>
  <p><%= link_to "Delete Pet", "/pets/#{@pet.id}", method: :delete %></p>

</body>
